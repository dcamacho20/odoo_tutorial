<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- Vista tipo tree -->
  <record id="view_estate_property_tree" model="ir.ui.view">
    <field name="name">estate.property.list</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="postcode"/>
        <field name="bedrooms"/>
        <field name="living_area"/>
        <field name="expected_price"/>
        <field name="selling_price"/>
        <field name="date_availability"/>
      </list>
    </field>
  </record>

  <!-- Vista tipo form -->
  <record id="view_estate_property_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name"/>
            </h1>
          </div>
          <group col="2">
            <field name="postcode"/>
            <field name="expected_price"/>
            <field name="date_availability"/>
            <field name="selling_price"/>
          </group>
          <notebook>
            <page string="Description">
              <group>
                <field name="description"/>
              </group>
              <group>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_estate_property_search" model="ir.ui.view">
    <field name="name">estate.property.view.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" />
        <field name="postcode" />
        <field name="expected_price" />
        <field name="bedrooms" />
        <field name="living_area" filter_domain="[('living_area', '&gt;=', self)]"/>
        <field name="facades" />
        <separator />
        <filter name="available" string="Available" domain="[('state', 'in', ('new','offer received'))]" />
        <group expand="0" string="Group By">
          <filter name="group_by_postcode" string="Postcode" context="{'group_by':'postcode'}" help="" />
        </group>
      </search>
    </field>
  </record>

  <!-- AcciÃ³n -->
  <record id="estate_property_action" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">list,form</field>
    <field name="search_view_id" ref="view_estate_property_search"/>
  </record>

</odoo>
